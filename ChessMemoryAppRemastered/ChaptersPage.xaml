<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChessMemoryAppRemastered.ChaptersPage"
             Title="ChaptersPage"
             BackgroundColor="{StaticResource Black}"
             Shell.BackgroundColor="{StaticResource Black}"
             Shell.TitleColor="White"
             Shell.TabBarBackgroundColor="{StaticResource Black}"
             >

    <ScrollView>
        <VerticalStackLayout x:Name="variationsLayout">
            <Button x:Name="btnChessBot"
                    Text="Chess Bot"
                    Clicked="btnChessBot_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>