<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChessMemoryAppRemastered.ChessBotPage"
             Title="ChessBotPage"
             BackgroundColor="{StaticResource Black}"
             Shell.NavBarIsVisible="False"
             Shell.BackgroundColor="{StaticResource Black}"
             Shell.TitleColor="White"
             Shell.TabBarBackgroundColor="{StaticResource Black}"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition x:Name="columnChessBoard" Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Label x:Name="lblTitle"
               Text="Chess Bot"
               Grid.Column="0"
               Grid.Row="0"
               Grid.ColumnSpan="6"
               FontSize="30"
               Margin="0, 0, 0, 20"/>


        <VerticalStackLayout 
            WidthRequest="200"
            HorizontalOptions="Start"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid ColumnDefinitions="*,*">
                <Button x:Name="btnPreviousMove"
                        Text="&lt;--"
                        Clicked="BtnPreviousMove_Clicked"
                        Grid.Column="0"/>
                <Button x:Name="btnNextMove"
                        Text="--&gt;"
                        Clicked="BtnNextMove_Clicked"
                        Grid.Column="1"/>
            </Grid>
            <Button x:Name="btnReset"
                    Text="Reset"
                    Clicked="BtnReset_Clicked"/>
            <Button x:Name="btnToggleText"
                    Text="Toggle text"
                    Clicked="BtnToggleText_Clicked"/>
            <Button x:Name="btnCopy"
                    Text="Copy"
                    Clicked="BtnCopy_Clicked"/>

            <Label x:Name="lblWordMove"
                   TextColor="White"
                   FontSize="35"
                   HorizontalTextAlignment="Center"></Label>
        </VerticalStackLayout>

        <AbsoluteLayout x:Name="absoluteLayoutChessBoard"
                        Grid.Row="1"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Margin="0, 0, 0, 50"/>
    </Grid>
</ContentPage>